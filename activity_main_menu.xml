<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="10dp"
    android:layout_marginRight="10dp"
    tools:context=".MainActivity"
    android:orientation="vertical">
    <TextView android:id="@+id/mainmenu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"></TextView>
    <Button android:id="@+id/mainmenu_add"
        android:text="@string/addreview" android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:layout_gravity="center"
        android:onClick=""/>
    <Button android:id="@+id/mainmenu_search"
        android:text="@string/searchreview" android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:layout_gravity="center"
        android:onClick=""/>
</LinearLayout>
